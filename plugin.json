{
  "name": "unify_2_1",
  "version": "1.0.0",
  "description": "Comprehensive Unify 2.1 data migration plugin with multi-agent orchestration, PySpark development, and Azure DevOps integration for medallion architecture ETL pipelines",
  "author": "Linus McMananey",
  "license": "MIT",
  "homepage": "https://github.com/linus-mcmanamey/unify_2_1_plugin",
  "repository": {
    "type": "git",
    "url": "https://github.com/linus-mcmanamey/unify_2_1_plugin.git"
  },
  "keywords": [
    "pyspark",
    "azure",
    "synapse",
    "etl",
    "medallion-architecture",
    "data-engineering",
    "orchestration",
    "multi-agent",
    "devops"
  ],
  "capabilities": {
    "commands": 30,
    "agents": 16,
    "skills": 9,
    "hooks": 3
  },
  "components": {
    "commands": [
      "aa_command",
      "add-performance-monitoring",
      "background",
      "branch-cleanup",
      "code-review",
      "commit-and-pr",
      "create-feature",
      "create-prd",
      "describe",
      "local-commit",
      "orchestrate",
      "pr-deploy-workflow",
      "pr-feature-to-staging",
      "pr-fix-pr-review",
      "prime-claude-md",
      "setup-docker-containers",
      "update-docs-test",
      "update-docs",
      "workflow-orchestrator",
      "write-tests"
    ],
    "agents": [
      "master-orchestrator",
      "developer-pyspark",
      "code-reviewer",
      "test-engineer",
      "developer-python",
      "developer-sql",
      "developer-azure-engineer",
      "performance-engineer",
      "git-manager",
      "code-documenter",
      "powershell-test-engineer",
      "developer-bash-shell",
      "business-analyst",
      "product-manager",
      "system-architect",
      "security-analyst"
    ],
    "skills": [
      "azure-devops",
      "mcp-code-execution",
      "multi-agent-orchestration",
      "project-architecture",
      "project-commands",
      "pyspark-patterns",
      "schema-reference",
      "skill-creator"
    ],
    "hooks": [
      "skill-activation-prompt"
    ]
  },
  "requirements": {
    "claude_code": ">=1.0.0",
    "python": ">=3.10",
    "pyspark": ">=3.3.0"
  },
  "features": {
    "multi_agent_orchestration": {
      "enabled": true,
      "description": "Coordinate 2-8 specialized agents in parallel or sequential workflows",
      "agents": 16,
      "execution_patterns": ["parallel", "sequential", "hybrid"]
    },
    "pyspark_development": {
      "enabled": true,
      "description": "PySpark ETL development for Azure Synapse medallion architecture",
      "layers": ["bronze", "silver", "gold"],
      "utilities": ["SparkOptimiser", "NotebookLogger", "TableUtilities"]
    },
    "azure_devops_integration": {
      "enabled": true,
      "description": "Work item analysis, pipeline creation, PR management",
      "capabilities": ["user_story_analysis", "deployment_planning", "ci_cd_pipelines"]
    },
    "quality_gates": {
      "enabled": true,
      "description": "Mandatory syntax, linting, formatting, and testing validation",
      "checks": ["syntax_check", "linting", "formatting", "tests"]
    },
    "chain_of_verification": {
      "enabled": true,
      "description": "Systematic verification strategy for all orchestrated workflows",
      "workflow": ["Primary Task", "Generate Output", "Identify Weaknesses", "Cite Evidence", "Revise"]
    }
  },
  "configuration": {
    "default_branch_workflow": "feature → staging → develop → main",
    "medallion_layers": {
      "bronze": "Raw parquet ingestion",
      "silver": "Validated, standardized data",
      "gold": "Business-ready analytics"
    },
    "coding_standards": {
      "line_length": 240,
      "type_hints": "mandatory",
      "docstrings": "on_request_only",
      "blank_lines_in_functions": false
    }
  },
  "documentation": {
    "readme": "README.md",
    "getting_started": "README.md#getting-started",
    "agent_reference": "README.md#agents",
    "command_reference": "README.md#commands",
    "skill_reference": "README.md#skills"
  }
}
